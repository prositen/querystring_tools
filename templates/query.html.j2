{% include 'header.html.j2' %}
<body>

<div class="container">
    <div class="page-header"><h1>Parse query string</h1></div>
    <form class="form-horizontal" action="{{ url_for('parse') }}" method="POST">
        <div class="form-group">
            <div class="col-md-12">
                <textarea class="form-control" placeholder="Paste query string here" name="query" id="query"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" class="form-control">
            </div>
        </div>
    </form>
    <div class="form-group">&nbsp;</div>
    <form class="form-horizontal">
    {% for name,value in values|dictsort %}
        <div class="form-group">
            <label class="control-label col-md-2" for="item-{{ loop.index }}">{{ name }}</label>
            <div class="col-md-6"><input class="form-control" type="text" id="item-{{ loop.index }}" value="{{ value }}" readonly="readonly"></div>
        </div>
    {% endfor %}
    </form>
</div>
</body>
{% include 'footer.html.j2' %}